{
  "name": "@typed-code/schemats",
  "version": "4.2.2",
  "description": "Generate typescript interface definitions from (Postgres or MySql) SQL database schema",
  "keywords": [
    "postgres",
    "mysql",
    "schema",
    "typescript",
    "sql"
  ],
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist/src/**/*",
    "dist/bin/**/*"
  ],
  "scripts": {
    "lint": "tslint --project tsconfig.json --fix",
    "build": "tsc",
    "pretest": "npm run lint && npm run build",
    "test": "jest",
    "prepublish": "npm run build",
    "clean": "del-cli node_modules **/*.js",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "release": "release-it"
  },
  "bin": {
    "schemats": "dist/bin/schemats.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/typed-code/schemats.git"
  },
  "bugs": {
    "url": "https://github.com/typed-code/schemats/issues"
  },
  "author": "Mengxuan Xia <xiamx2004@gmail.com>",
  "contributors": [
    "Arnaud Benhamdine <arnaud.benhamdine@gmail.com>",
    "zigomir <zigomir@gmail.com>",
    "Mark Crisp <macr1324@gmail.com>"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.22",
    "@types/lodash": "^4.14.146",
    "@types/mysql": "2.15.5",
    "@types/mz": "^0.0.32",
    "@types/node": "^11.15.2",
    "@types/prettier": "^1.18.3",
    "@types/yargs": "^12.0.13",
    "auto-changelog": "^2.2.1",
    "del-cli": "^3.0.1",
    "jest": "^26.4.2",
    "release-it": "^14.0.3",
    "ts-jest": "^26.4.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0"
  },
  "dependencies": {
    "lodash": "^4.17.20",
    "mysql": "^2.18.1",
    "mz": "^2.7.0",
    "pg-promise": "^10.6.1",
    "pkg-up": "^3.1.0",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3",
    "yargs": "^16.0.3"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.[j|t]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "release-it": {
    "git": {
      "changelog": "npx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs"
    },
    "hooks": {
      "after:bump": "npx auto-changelog -p"
    },
    "github": {
      "release": true
    }
  },
  "homepage": "https://github.com/typed-code/schemats#readme"
}
