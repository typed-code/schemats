{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "declaration": true,
    "strictNullChecks": true,
    "newLine": "LF",
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "dts",
    "__tests__/actual",
    "__tests__/expected",
    "__tests__/fixture",
    "**/*.d.ts"
  ],
  "include": ["src/**/*.ts", "__tests__/**/*.test.ts", "bin/**/*.ts"]
}
