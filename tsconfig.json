{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "outDir": "dist",
    "lib": ["es2015", "es2017"],
    "noImplicitAny": true,
    "declaration": true,
    "strictNullChecks": true,
    "newLine": "LF",
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "dts",
    "__tests__/actual",
    "__tests__/expected",
    "__tests__/fixture",
    "**/*.d.ts"
  ],
  "include": ["src/**/*.ts", "__tests__/**/*.test.ts", "bin/**/*.ts"]
}
