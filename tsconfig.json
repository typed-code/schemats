{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "outDir": "dist",
        "lib": ["es2015", "es2017"],
        "noImplicitAny": true,
        "declaration": true,
        "strictNullChecks": true,
        "newLine": "LF",
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "dts",
        "test/actual",
        "test/expected",
        "test/fixture",
        "**/*.d.ts"
    ],
    "include": [
        "src/**/*.ts",
        "test/**/*.test.ts",
        "bin/**/*.ts"
    ]
}
